<h1>Books</h1>

<% @books.each do |book| %>

<div class=title>
<p>Title</p>
<span><%= book.title %></span>
</div>

<div class=body>
<p>Body</p>
<span><%= book.body %></span>
</div>

<% end %>


<h1>New book</h1>
<%= form_with model: @book,url: '/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<div class="action">
    <%= f.submit 'Create Book' %>

</div>
<% end %>
